{
    "schemaVersion": "2.2",
    "description": "Install Advanced CloudWatch monitor then send details every 5 minutes.",
    "parameters": {
      "Region": {
        "type": "String",
        "description": "Enter Region (for example: us-east-1)."
      }
    },
    "mainSteps": [
      {
        "action": "aws:runShellScript",
        "name": "example",
        "inputs": {
          "runCommand": [ 
                          "sudo yum update -y",
                          "curl https://s3.amazonaws.com/aws-cloudwatch/downloads/latest/awslogs-agent-setup.py -O",
                          "sudo python ./awslogs-agent-setup.py --region {{Region}}"
            ]
        }
      }
    ]
  }